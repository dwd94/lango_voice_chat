# Database
DATABASE_URL=sqlite+aiosqlite:///./voicecare.db
# For Postgres: postgresql+asyncpg://user:pass@localhost:5432/voicecare

# Server
APP_HOST=127.0.0.1
APP_PORT=8000
CORS_ORIGINS=["http://localhost:3000"]

# External Services
LIBRE_TRANSLATE_URL=https://libretranslate.com/translate

# Voice Settings
MAX_VOICE_SECONDS=120

# STT Configuration
STT_PROVIDER=whisper
WHISPER_MODEL=small
WHISPER_COMPUTE=cpu
WHISPER_BEAM_SIZE=1
WHISPER_VAD=true
WHISPER_TEMPERATURE=0.0
WHISPER_NO_SPEECH_THRESHOLD=0.45

# TTS Configuration
TTS_PROVIDER=piper
PIPER_VOICES_DIR=./voices/piper
# Optional: ELEVENLABS_API_KEY=your_key_here

# Logging
LOG_LEVEL=INFO
