# VoiceCare Configuration
# Copy this file to .env and update with your actual API keys

# Database
DATABASE_URL=sqlite+aiosqlite:///./voicecare.db

# Server
APP_HOST=127.0.0.1
APP_PORT=8000

# CORS
CORS_ORIGINS=["http://localhost:3000"]

# STT Configuration (whisper is most reliable)
STT_PROVIDER=whisper

# TTS Configuration (openai works with your current key)
TTS_PROVIDER=openai

# Translation Configuration
TRANSLATION_PROVIDER=auto

# OpenAI Configuration
OPENAI_API_KEY=your_openai_key_here
OPENAI_STT_MODEL=whisper-1
OPENAI_TTS_MODEL=tts-1
OPENAI_TTS_VOICE=alloy
OPENAI_TRANSLATE_MODEL=gpt-4o

# ElevenLabs Configuration (get your key from https://elevenlabs.io/app/settings/api-keys)
ELEVENLABS_API_KEY=sk_a412c93ad027e6b32aa87a708262db00906c9fe38ba64db5

ELEVENLABS_STT_MODEL=scribe_v1

# Whisper Configuration
WHISPER_MODEL=tiny
WHISPER_COMPUTE=cpu
WHISPER_BEAM_SIZE=1
WHISPER_VAD=true
WHISPER_TEMPERATURE=0.0
WHISPER_NO_SPEECH_THRESHOLD=0.45

# Authentication
AUTH_SECRET_KEY=your-secret-key-change-in-production
AUTH_TOKEN_EXPIRE_MINUTES=10080

# Logging
LOG_LEVEL=INFO
